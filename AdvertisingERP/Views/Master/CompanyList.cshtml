@model AdvertisingERP.Models.Master
@{
    ViewBag.Title = "CompanyList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("CompanyList", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                    <div class="breadcrumb-title pe-3">Master</div>
                    <div class="ps-3">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb mb-0 p-0">
                                <li class="breadcrumb-item">
                                    <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">Company List</li>
                            </ol>
                        </nav>
                    </div>
                    <div class="ms-auto">
                        <div class="btn-group">
                            <a href="/Master/CompanyMaster" class="btn btn-light list-button">Add Company</a>

                        </div>
                    </div>
                </div>
                <hr />
                 <div class="row">
                    <div class="col-12">
                        <div class="card">
                            @if (@TempData["Success"] != null)
                            {
                                <div class="alert border-0 alert-dismissible fade show py-2">
                                    <div class="d-flex align-items-center">
                                        <div class="font-35 text-white">
                                            <i class="bx bxs-check-circle" style="color:green"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="text-white">@TempData["Success"]!</div>
                                        </div>
                                    </div>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                </div>
                            }
                                 <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example2" class="table table-striped table-bordered display">
                                        <thead>
                                            <tr>
                                                <th>Company Name</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null)
                                            {
                                                if (Model.lstcompany != null)
                                                {
                                                    foreach (var item in Model.lstcompany)
                                                    {
                                                        <tr>
                                                            <td>@item.CompanyName</td>
                                                          
                                                            <td>
                                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                                    <button type="button" class="btn btn-light">
                                                                        <a href="/Master/CompanyMaster?id=@item.EncryptKey" class="text-warning" title="Edit"><i class="bx bx-pencil me-0"></i></a>
                                                                    </button>
                                                                    <button type="button" class="btn btn-light">
                                                                        <a href="/Master/DeleteCompany?id=@item.EncryptKey" onclick="return confirm('Do you want to delete this Company ?');" class="label label-danger"><i class="bx bx-trash-alt me-0"></i></a>
                                                                    </button>

                                                                </div>
                                                            </td>

                                                        </tr>
                                                    }
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>

            $(document).ready(function () {
                $("#divload").css({ 'display': 'none' });
            });

</script>


