@model AdvertisingERP.Models.Master
@{
    ViewBag.Title = "CompanyMaster";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("CompanyMaster", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Master</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Company Master</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <a href="/Master/CompanyList" class="btn btn-light list-button">Back To List</a>

                </div>
            </div>
        </div>
        <hr />
        <div class="card">
            @if (@TempData["success"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-check-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["success"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            }
            @if (@TempData["error"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-check-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["error"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Company Name  <span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.CompanyName, new { @class = "form-control", @Placeholder = "Company Name" })
                            @Html.HiddenFor(m => m.Pk_CompanyID)
                        </div>
                        
                        <div class="col-12">
                            @if (Model.Pk_CompanyID != null)
                            {
                                <input type="submit" value="Update Company" class="btn btn-light px-5" name="Updatecompany" onclick="return validateservice();" />
                            }
                            else
                            {
                                <input type="submit" value="Save Company" class="btn btn-light px-5" name="SaveCompany" onclick="return validateservice();" />

                                <a href="/Master/CompanyMaster" class="btn btn-dark">Reset</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>

            $(document).ready(function () {
                $("#divload").css({ 'display': 'none' });
            });

            function validateservice() {
                $(".errortext").removeClass("errortext");
                if ($('#CompanyName').val() == '') {
                    $("#CompanyName").addClass('errortext');
                    $('#CompanyName').focus();
                    return false;
                }
                
                $("#divload").css({ 'display': '' });
            }

</script>

<style>
    .errortext{
border:ridge;
border-color:red;
    
    }
</style>


