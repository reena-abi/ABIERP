
@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
    .headertable td {
        height: 70px;
        padding: 10px;
        text-align: center;
    }

    .descriptiontable {
        text-align: center;
    }
    ul li{
        list-style:none;
    }
</style>
<div class="page-content">
    <!--breadcrumb-->
    @*<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Purchase Order</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Purchase Order Details</li>
                    </ol>
                </nav>
            </div>

        </div>*@
    <hr />
    <div class="container border">
        <div class="row" style="background:black">
            <div class="col-sm-6 align-items-center mt-2 mb-2">
                <img src="~/AdminCss/assets/images/logo-load.png" style="height:50px;" />
            </div>
            <div class="col-sm-6 text-right mt-2 mb-2">
                <h3 class="text-white text-uppercase">Invoice</h3>
            </div>
        </div>
        <div class="row">
            <div class="p-4 rounded">
                <div class="row g-3">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td style="color: white;background-color: #418fb2; width: 40%;">
                                <h3 style="background-color: #418fb2;padding:6px;">@ViewBag.CompanyName</h3>
                            </td>
                            <td style="border-right: 2px solid black; width: 30%;">
                                <b>Address</b>
                                <br />
                                <small>@ViewBag.CompanyAddress</small>
                            </td>
                            <td style="border-right: 2px solid black; width: 15%;">
                                <b>Mail</b>
                                <br />
                                <small>@ViewBag.CompanyEmail</small>
                            </td>
                            <td style="border-right: 2px solid black; width: 15%;">
                                <b>Phone</b>
                                <br />
                                <small>@ViewBag.CompanyMobile</small>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td style="width: 50%; float: left;">
                                <div class="p-1" style="background-color: #418fb2;">
                                    <h5 class="pl-2 text-uppercase text-white">Invoice Details</h5>
                                </div>
                                <div style="min-height:100px;" class="mt-4">
                                    <ul>
                                        <li>  Invoice No : @Model.InvoiceNo</li>
                                        <li> Invoice Date  : @DateTime.Now.ToString("dd/MM/yyyy")</li>
                                        <li> PO/Ref No :  @ViewBag.PONumber</li>
                                        <li> PO. Date : @ViewBag.PODate</li>
                                        <li> Campian With Duration : @ViewBag.Description</li>
                                    </ul>

                                   
                                </div>
                            </td>
                            <td style="width: 49%; float: left; text-align:left;">
                                <div class="p-1" style="background-color: #418fb2;">
                                    <h5 class="pl-2 text-uppercase text-white">Invoice To</h5>
                                </div>
                                <div style="min-height:100px;" class="mt-4">

                                    <ul>
                                        <li>  Name :  @Model.CustomerName
                                        <br />@Model.ConcernPerson1  </li>
                                        <li>  Address : @Model.StoreName,@Model.CustomerAddress</li>
                                        <li> Mobile No : @Model.CompanyMobile</li>
                                        <li>   Email : @Model.Email</li>
                                        <li>  Store Code/Type : @Model.StoreCode/@Model.StoreType</li>
                                    </ul>
                                  
                                   
                                   
                                </div>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table border="1" class="table table-striped table-bordered">
                        <thead class="table-text">
                            <tr>
                                <th>S.No.</th>
                                <th>SAC/HSNCode</th>
                                <th>Service</th>
                                <th>Description Of Goods</th>
                                <th>Width</th>
                                <th>Height</th>
                                <th>Quantity</th>
                                <th>Area</th>
                                <th>Rate (sqft/each)</th>
                                <th><b>&nbsp;&nbsp;Amount &nbsp;</b></th>
                            </tr>
                        </thead>
                       @if (Model != null)
                        {
                            if (Model.lstsaleorder != null)
                            {
                                var i = 1; foreach (var item in Model.lstsaleorder)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.HSNCode</td>
                                        <td>@item.ServiceName</td>
                                        <td>@item.SiteName</td>
                                        <td>@item.Width</td>
                                        <td>@item.Height</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Area</td>
                                        <td>@item.Rate</td>
                                        <td>@item.TotalAmount</td>
                                    </tr>
                                    i++;
                                }
                            }
                        }
                        <tr>

                            <td colspan="9" class="text-right"><b>Total Amount</b></td>
                            <td>&#8377; @ViewBag.TotalWithoutGST</td>
                        </tr>
                        <tr>

                            <td colspan="9" class="text-right"><b>Total CGST</b></td>
                            <td>&#8377; @ViewBag.CGST</td>
                        </tr>
                        <tr>

                            <td colspan="9" class="text-right"> <b>Total SGST</b></td>
                            <td>&#8377; @ViewBag.SGST</td>
                        </tr>
                        <tr>

                            <td colspan="9" class="text-right"> <b>Total IGST</b></td>
                            <td>&#8377; @ViewBag.IGST</td>
                        </tr>
                        <tr>

                            <td colspan="9" class="text-right"> <b>Total </b></td>
                            <td>&#8377; @ViewBag.FinalAmount</td>
                        </tr>
                        <tfoot>
                           
                        </tfoot>
                    </table>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td>
                                (Amount Chargeable in Words)
                                <br />
                                <b>@ViewBag.AmountInWords</b>
                            </td>
                        </tr>
                    </table>
                    <table style="width: 100%;" class="table">
                        <tbody>
                            <tr>
                                <td style="text-align:left;" colspan="2"><b>  Terms and Conditions :- </b></td>

                            </tr>
                            <tr>
                                <td style="text-align:left;" colspan="2">1. Taxes will be charge18% extra as per GST applicable.</td>

                            </tr>
                            <tr>
                                <td style="text-align:left;" colspan="2">2.Payments will be 100% advance in BTL branding.</td>

                            </tr>
                            <tr>
                                <td style="text-align:left;" colspan="2"> 3.Transportation and other charges will be extra.</td>

                            </tr>
                            <tr>
                                <td style="text-align:left;"> 4.In case of any damage or theft of the flex/media the client shall bear the cost of the flex/media or provide the new flex/media.</td>

                            </tr>
                            <tr>
                                <td style="text-align:left;"> 5.All disputes are Subject to Lucknow jurisdiction.</td>

                            </tr>

                        </tbody>
                    </table>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td>
                                <h5 class="mb-3">Payment Information</h5>
                                <table border="0" style="width:100%">
                                    <tr>
                                        <td>Bank</td>
                                        <td>: @ViewBag.BankName</td>
                                    </tr>
                                    <tr>
                                        <td>Account No</td>
                                        <td>: @ViewBag.AccountNo</td>
                                    </tr>
                                    <tr>
                                        <td>IFSC</td>
                                        <td>: @ViewBag.IFSC</td>
                                    </tr>
                                </table>
                            </td>
                            <td style="text-align: right;">
                                <br />
                                <br />
                                <hr />
                                (Signature with Stamp)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr style="color: white; height: 40px; text-align: center;">
                            <td>
                                <p style="background-color: #000;padding:10px">Thank you for your Business.</p>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
