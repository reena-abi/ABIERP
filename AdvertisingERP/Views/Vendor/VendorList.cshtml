@model AdvertisingERP.Models.Vendor

@{
    ViewBag.Title = "VendorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<style>
    .mt-btn {
        margin-top: 20px;
    }
</style>

@using (Html.BeginForm("VendorList", "Vendor", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Vendor</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Vendor List</li>
                    </ol>
                </nav>
            </div>
            <div class="alert alert-success" style="display: @ViewBag.saverrormsg;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h5 class="text-success"><i class="fa fa-check-circle"></i>@TempData["VendorDelete"]</h5>
            </div>
            <div class="ms-auto">
                <div class="btn-group">
                    <a href="/Vendor/AddVendor" class="btn btn-light list-button">Back To Vendor</a>
                </div>
            </div>
        </div>
        <hr />
        <div class="card">
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="input-1">Vendor Name</label>
                            @Html.TextBoxFor(m => m.VendorName, new { @class = "form-control", @Placeholder = "Vendor Name" })
                        </div>
                        <div class="col-md-4">
                            <label for="input-1">Vendor Code </label>
                            @Html.TextBoxFor(m => m.VendorCode, new { @class = "form-control", @Placeholder = "Vendor Code" })
                        </div>

                        <div class="col-md-4">
                            <input type="submit" value="Get Details" class="btn btn-light list-button mt-btn mb-3" name="GetDetails" onclick="return getdeatils();" />
                        </div>
                    </div>
                    <br />
                    <div class="table-responsive">
                        <table id="example2" class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Vendor Code</th>
                                    <th>Vendor Name</th>
                                    <th>Contact</th>
                                    <th>Email</th>
                                    <th>Nature</th>
                                    <th>Contact Person</th>
                                    <th>Bank Details</th>
                                    <th>Address</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    if (Model.lstVendor != null)
                                    {
                                        foreach (var item in Model.lstVendor)
                                        {
                                            <tr>
                                                <td>@item.VendorCode</td>
                                                <td>@item.VendorName</td>
                                                <td>@item.MobileNo</td>
                                                <td>@item.Email</td>
                                                <td>@item.NatureOfBusiness</td>
                                                <td>@item.ConcernPerson @item.ConcerPersonContact</td>
                                                <td>@item.BankName @item.AccountNo @item.IFSCCode</td>
                                                <td>@item.Address @item.StateName @item.City @item.Pincode</td>
                                                <td>
                                                    <div class="btn-group" role="group" aria-label="Basic example">
                                                        <button type="button" class="btn btn-light">
                                                            <a href="/Vendor/AddVendor?VendorId=@item.VendorCode" class="label label-primary">  <i class="bx bx-pencil me-0"></i></a>
</button>
                                                        <button type="button" class="btn btn-light">
                                                            <a href="/Vendor/DeleteVendor?VendorId=@item.VendorId" onclick="return confirm('Sure you want to delete this Vendor ?');" class="label label-danger">  <i class="bx bx-trash-alt me-0"></i>
</button>
                                                       
                                                    </div>




                                                </td>
                                            </tr>
                                        }
                                    }
                                }
                            </tbody>
                            
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $("#divload").css({ display: "none" });
    });
    function getdeatils() {
        $("#divload").css({ display: "" });
    }
</script>


