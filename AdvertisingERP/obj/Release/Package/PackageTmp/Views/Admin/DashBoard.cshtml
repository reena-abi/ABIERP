@model AdvertisingERP.Models.Admin

@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("DashBoard", "Admin", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Admin</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                    </ol>
                </nav>
            </div>
        </div>
        <hr />
        <div class="card radius-10">
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4 row-group g-0">
                <div class="col">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <h5 class="mb-0">@ViewBag.TotalCustomers</h5>
                            <div class="ms-auto">
                                <i class="bx bx-user-circle fs-3 text-white"></i>
                            </div>
                        </div>
                        <div class="progress my-3" style="height:3px;">
                            <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="d-flex align-items-center text-white">
                            <p class="mb-0">Total Customers</p>
                            <p class="mb-0 ms-auto"><span><i class="bx bx-up-arrow-alt"></i></span></p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <h5 class="mb-0">@ViewBag.TotalVendors</h5>
                            <div class="ms-auto">
                                <i class="bx bx-group fs-3 text-white"></i>
                            </div>
                        </div>
                        <div class="progress my-3" style="height:3px;">
                            <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="d-flex align-items-center text-white">
                            <p class="mb-0">Total Vendors</p>
                            <p class="mb-0 ms-auto"><span><i class="bx bx-up-arrow-alt"></i></span></p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <h5 class="mb-0">@ViewBag.TotalCampaigns</h5>
                            <div class="ms-auto">
                                <i class="bx bx-group fs-3 text-white"></i>
                            </div>
                        </div>
                        <div class="progress my-3" style="height:3px;">
                            <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="d-flex align-items-center text-white">
                            <p class="mb-0">Total Campaigns</p>
                            <p class="mb-0 ms-auto"><span><i class="bx bx-up-arrow-alt"></i></span></p>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <h5 class="mb-0">@ViewBag.TotalSalesOrder</h5>
                            <div class="ms-auto">
                                <i class="bx bx-shopping-bag fs-3 text-white"></i>
                            </div>
                        </div>
                        <div class="progress my-3" style="height:3px;">
                            <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="d-flex align-items-center text-white">
                            <p class="mb-0">Total Sales Order</p>
                            <p class="mb-0 ms-auto"><span><i class="bx bx-up-arrow-alt"></i></span></p>
                        </div>
                    </div>
                </div>
            </div><!--end row-->
        </div>
        <div class="card">
            <div class="card-body">
                <div class="m-b-0 card-title">
                    <h5 class="card-title">PO List(Bill not received)</h5>
                </div>
                <hr>
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th>PO No</th>
                                        <th>CampaignNo</th>
                                        <th>Creative Name</th>
                                        <th>Bill No</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstSaleOrders != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.lstSaleOrders)
                                            {
                                                <tr>
                                                    <td>@item.PurchasOrderNo</td>
                                                    <td>@item.CampaignNo</td>
                                                    <td>@item.CreativeName</td>
                                                    <td>
                                                        <input type="text" class="form-control" id="bill_@i" />
                                                    </td>
                                                    <td>
                                                        <a id="update" onclick="return updatebillno('@i','@item.PurchasOrderNo')" class="btn btn-primary">Update</a>
                                                    </td>
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="page-content">
     
        <div class="card">
            <div class="card-body">
                <div class="m-b-0 card-title">
                    <h5 class="card-title">SO List</h5>
                </div>
                <hr>
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>

                                        <th>Invoice No</th>
                                        <th>Creative Name</th>
                                        <th>StartDate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstbill != null)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.lstbill)
                                            {
                                                <tr>



                                                    <td>@item.InvoiceNo</td>
                                                    <td>
                                                        @item.CreativeName
                                                    </td>
                                                    <td>
                                                        @item.StartDate
                                                    </td>
                                                    <td>
                                                        <a id="update" onclick="return updateso('@i','@item.InvoiceNo')" class="btn btn-light px-4">Update</a>
                                                    </td>


                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
}
@*<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>*@
<script>
        $(document).ready(function () {
            $("#divload").css({ 'display': 'none' });
        });
        function updatebillno(id, pono) {
            var r = confirm('Are you sure you want to update this PO ?');
            if (r == true) {
                var billid = "bill_" + id;
                var billno = $('#' + billid + '').val();
                $.ajax({
                    url: "/Admin/UpdateBillNo",
                    Type: "Get",
                    DataType: "JSON",
                    data: { BillNo: billno, PONo: pono },
                    success: function (data) {
                        if (data.Result == "1") {
                            alert("Bill No Updated Successfully.");
                            window.location.href = '/Admin/DashBoard';
                        }
                        else {
                            alert(data.Result);
                        }
                        $("#divload").css({ 'display': 'none' });
                    }
                });
            }
        }
        function updateso(id, InvoiceNo)
        {
            var r = confirm('Are you sure you want to update this SO ?');
            if (r == true) {

                $.ajax({
                    url: "/Admin/UpdateSO",
                    Type: "Get",
                    DataType: "JSON",
                    data: { InvoiceNo: InvoiceNo},
                    success: function (data) {
                        if (data.Result == "1") {
                            alert("Invoice Updated Successfully.");
                            window.location.href = '/Admin/DashBoard';
                        }
                        else {
                            alert(data.Result);
                        }
                        $("#divload").css({ 'display': 'none' });
                    }
                });
            }
        }
</script>