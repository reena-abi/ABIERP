@model AdvertisingERP.Models.Expense

@{
    ViewBag.Title = "ExpenseType";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ExpenseType", "Expense", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Expense</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Expense Type</li>
                    </ol>
                </nav>
            </div>
            @*<div class="ms-auto">
                    <div class="btn-group">
                        <a href="/Master/BankList" class="btn btn-light list-button">Back To List</a>

                    </div>
                </div>*@
        </div>
        <hr />
        <div class="card">
            @if (@TempData["msg"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-check-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["msg"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            }
            @if (@TempData["msgerror"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-error-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["msgerror"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card-body">
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Expense Type<span style="color: red">*</span></label>
                            @Html.DropDownListFor(m => m.ExpenseType, new SelectList(ViewBag.ddlExpenseType, "Value", "Text"), new { @class = "form-select" })
                        </div>
                        <div class="col-md-4">
                            <label for="validationCustom01" class="form-label">Expense Name<span style="color: red">*</span></label>
                            @Html.TextBoxFor(m => m.ExpenseName, new { @class = "form-control", @Placeholder = "Expense Name" })
                        </div>
                        <div class="col-md-4 mt-5">
                            <input type="hidden" id="ExpenseId" name="ExpenseId" value="@Model.ExpenseId" />
                            @if (Model.ExpenseId == null)
                            {
                                <input type="submit" value="Submit" class="btn btn-light px-5" name="btnsave" onclick="return validateservice();" />
                                <a href="/Expense/ExpenseList" class="btn btn-light list-button">Back To List</a>
                            }
                            else
                            {
                                <input type="submit" value="Update" class="btn btn-light px-5" name="btnupdate" onclick="return validateservice();" />
                                <a href="/Expense/ExpenseList" class="btn btn-light list-button">Back To List</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script>

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function validateservice() {
        $(".errortext").removeClass("errortext");
        if ($('#ExpenseTypeId').val() == '0') {
            $("#ExpenseTypeId").addClass('errortext');
            $('#ExpenseTypeId').focus();
            return false;
        }
        if ($('#ExpenseName').val() == '') {
            $("#ExpenseName").addClass('errortext');
            $('#ExpenseName').focus();
            return false;
        }
        $("#divload").css({ 'display': '' });
    }

</script>




