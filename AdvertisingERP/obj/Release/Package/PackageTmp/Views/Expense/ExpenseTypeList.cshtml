@model AdvertisingERP.Models.Expense

@{
    ViewBag.Title = "ExpenseTypeList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("ExpenseTypeList", "Expense", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
{
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Expense</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Expense Type List</li>
                    </ol>
                </nav>
            </div>
            <div class="ms-auto">
            <div class="btn-group">
                <a href="/Expense/ExpenseTypeMaster" class="btn btn-light list-button">Add New</a>

            </div>
        </div>
        </div>
        <hr />
        <div class="card">
            @if (@TempData["msg"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-check-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["msg"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>

            }
            @if (@TempData["msgerror"] != null)
            {
                <div class="alert border-0 alert-dismissible fade show py-2">
                    <div class="d-flex align-items-center">
                        <div class="font-35 text-white">
                            <i class="bx bxs-error-circle" style="color:green"></i>
                        </div>
                        <div class="ms-3">
                            <div class="text-white">@TempData["msgerror"]!</div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="card-body">
                <div class="m-b-0 card-title">
                    <h5 class="card-title">Expense Type List</h5>
                </div>
                <hr>
                <div class="p-4 border rounded">
                    <div class="row g-3">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered" id="example2">
                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Expense Type Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        if (Model.lstExpenseType != null)
                                        {
                                            int i = 1;
                                            foreach (var item in Model.lstExpenseType)
                                            {
                                                <tr>
                                                    <td>@i</td>
                                                    <td>@item.ExpenseType</td>
                                                    <td><a href="/Expense/DeleteExpenseType?Id=@item.ExpenseTypeId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this expense type name ?')">Delete</a></td>
                                                 
                                                </tr>
                                                i++;
                                            }

                                        }
                                    }

                                </tbody>

                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}






