    <style>
        #divload {
            position: fixed;
            height: 100%;
            width: 100%;
            top: 0;
            left: 0;
            background-image: linear-gradient(82deg, #01465f, #5bb3e0);
            z-index: 9999;
            font-size: 65px;
            text-align: center;
            padding-top: 200px;
            color: #fff;
            font-family: tahoma;
        }

        .loadergif {
            width: 300px;
        }
    </style>
