@model AdvertisingERP.Models.Master

@{
    ViewBag.Title = "FinancialYear";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("FinancialYear", "Master", FormMethod.Post, new { @id = "signupForm", enctype = "multipart/form-data" }))
            {
    <div class="page-content">
        <div class="content-wrapper">
            <div class="container-fluid">
                <div class="col-md-12">
                    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                        <div class="breadcrumb-title pe-3">Master</div>
                        <div class="ps-3">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb mb-0 p-0">
                                    <li class="breadcrumb-item">
                                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                                    </li>
                                    <li class="breadcrumb-item active" aria-current="page">Financial Year</li>
                                </ol>
                            </nav>
                        </div>
                        <div class="ms-auto">
                            <div class="btn-group">
                                <a href="/Master/FinancialYearList" class="btn btn-light list-button">Back To List</a>

                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="card">
                        @if (@TempData["Financialsuccess"] != null)
                        {
                            <div class="alert border-0 alert-dismissible fade show py-2">
                                <div class="d-flex align-items-center">
                                    <div class="font-35 text-white">
                                        <i class="bx bxs-check-circle" style="color:green"></i>
                                    </div>
                                    <div class="ms-3">
                                        <div class="text-white">@TempData["Financialsuccess"]!</div>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>

                        }
                        @if (@TempData["Financialerror"] != null)
                        {
                            <div class="alert border-0 alert-dismissible fade show py-2">
                                <div class="d-flex align-items-center">
                                    <div class="font-35 text-white">
                                        <i class="bx bxs-check-circle" style="color:green"></i>
                                    </div>
                                    <div class="ms-3">
                                        <div class="text-white">@TempData["Financialerror"]!</div>
                                    </div>
                                </div>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-group row">
                                        <div class="col-md-12">
                                            <label class="control-label">Financial Year Name <span style="color: red">*</span></label>
                                            @Html.TextBoxFor(m => m.FinancialYearName, new { @class = "form-control", @Placeholder = "Financial Year Name" })

                                        </div>
                                    </div>
                                </div>
                                <!--/span-->
                            </div>

                            <div class="row">
                                <div class="col-md-6 mt-4">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            @if (Model.FinancialYearID != null)
                                            {
                                                <input type="submit" value="Update Financial Year" class="btn btn-light" name="UpdateFinancialYear" onclick="return validateservice();" />
                                            }
                                            else
                                            {
                                                <input type="submit" value="Save Financial Year" class="btn btn-light" name="SaveFinancialYear" onclick="return validateservice();" />
                                                <a href="/Master/FinancialYear" class="btn btn-dark">Reset</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
        }



            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <script>
            $(document).ready(function () {
                $("#divload").css({ 'display': 'none' });
            });

            function isNumber(evt) {
                var charCode = (evt.which) ? evt.which : evt.keyCode;
                if (charCode != 46 && charCode > 31
                  && (charCode < 48 || charCode > 57))
                    return false;

                return true;
            }

            function validateservice() {
                $(".errortext").removeClass("errortext");
                if ($('#FinancialYearName').val() == '') {
                    $("#FinancialYearName").addClass('errortext');
                    $('#FinancialYearName').focus();
                    return false;
                }
            }

        </script>
