@model AdvertisingERP.Models.SaleOrder

@{
    ViewBag.Title = "PrintSO";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<style>
    .headertable td {
        height: 70px;
        padding: 10px;
        text-align: center;
    }

    .descriptiontable {
        text-align: center;
    }
</style>
<div class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3">Purchase Order</div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item">
                        <a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Purchase Order Details</li>
                </ol>
            </nav>
        </div>

    </div>
    <hr />
    <div class="container border">
        <div class="row" style="background:black">
            <div class="col-sm-6 align-items-center mt-2 mb-2">
                <img src="~/AdminCss/assets/images/logo-load.png" style="height:50px;" />
            </div>
            <div class="col-sm-6 text-right mt-2 mb-2">
                <h3 class="text-white text-uppercase">Invoice</h3>
            </div>
        </div>
        <div class="row">
            <div class="p-4 rounded">
                <div class="row g-3">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td style="color: white;background-color: #418fb2; width: 40%;">
                                <h3 style="background-color: #418fb2;padding:6px;">@ViewBag.CompanyName</h3>
                            </td>
                            <td style="border-right: 2px solid black; width: 30%;">
                                <b>Address</b>
                                <br />
                                <small>@ViewBag.CompanyAddress</small>
                            </td>
                            <td style="border-right: 2px solid black; width: 15%;">
                                <b>Mail</b>
                                <br />
                                <small>@ViewBag.CompanyEmail</small>
                            </td>
                            <td style="border-right: 2px solid black; width: 15%;">
                                <b>Phone</b>
                                <br />
                                <small>@ViewBag.CompanyMobile</small>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td style="width: 50%; float: left;">
                                <div class="p-1" style="background-color: #418fb2;">
                                    <h5 class="pl-2 text-uppercase text-white">Invoice Details</h5>
                                </div>
                                <div style="min-height:100px;" class="mt-4">
                                    Order No :@ViewBag.InvoiceNumber
                                    <br />
                                    Order Date : @DateTime.Now.ToString("dd/MM/yyyy")
                                </div>
                            </td>
                            <td style="width: 49%; float: left; text-align: right;">
                                <div class="p-1" style="background-color: #418fb2;">
                                    <h5 class="pl-2 text-uppercase text-white">Invoice To</h5>
                                </div>
                                <div style="min-height:100px;" class="mt-4">
                                    Shankar Advertising Agency
                                    D-54, Arjun Tower, Vibhuti Khand
                                    Lucknow
                                </div>
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table border="1" class="table table-striped table-bordered">
                        <thead class="table-text">
                            <tr>
                                <th>S.No.</th>
                                <th>Description Of Goods</th>
                                <th>HSN/SAC</th>
                                <th>Quantity</th>
                                <th>Rate</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        @if (Model != null)
                        {
                            if (Model.lstsaleorder != null)
                            {
                                var i = 1; foreach (var item in Model.lstsaleorder)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.Description</td>
                                        <td>@item.HSNCode</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Rate</td>
                                        <td>@item.TotalAmount</td>
                                    </tr>
                                    i++;
                                }
                            }
                        }
                        <tfoot>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>Total CGST</b></td>
                                <td>&#8377; @ViewBag.CGST</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>Total SGST</b></td>
                                <td>&#8377; @ViewBag.SGST</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td><b>Total</b></td>
                                <td>&#8377; @ViewBag.FinalAmount</td>
                            </tr>
                        </tfoot>
                    </table>
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td>
                                (Amount Chargeable in Words)
                                <br />
                                <b>@ViewBag.AmountInWords</b>
                            </td>
                        </tr>
                    </table>
                    <table style="text-align: center;width:100%" border="1">
                        <thead>
                            <tr>
                                <th rowspan="2">HSN/SAC</th>
                                <th rowspan="2">Taxable Value</th>
                                <th colspan="2">Central Tax</th>
                                <th colspan="2">State Tax</th>
                                <th rowspan="2">Total Tax Amount</th>
                            </tr>
                            <tr>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>Rate</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tr>
                            <td></td>
                            <td>@ViewBag.FinalAmount</td>
                            <td>9</td>
                            <td>
                                &#8377; @ViewBag.CentralTax
                            </td>
                            <td>9</td>
                            <td>
                                &#8377; @ViewBag.StateTax
                            </td>
                            <td>&#8377; @ViewBag.TotalTax</td>
                        </tr>
                    </table>
                    <br />
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr>
                            <td>
                                <h5 class="mb-3">Payment Information</h5>
                                <table border="0" style="width:100%">
                                    <tr>
                                        <td>Bank</td>
                                        <td>: @ViewBag.BankName</td>
                                    </tr>
                                    <tr>
                                        <td>Account No</td>
                                        <td>: @ViewBag.AccountNo</td>
                                    </tr>
                                    <tr>
                                        <td>IFSC</td>
                                        <td>: @ViewBag.IFSC</td>
                                    </tr>
                                </table>
                            </td>
                            <td style="text-align: right;">
                                <br />
                                <br />
                                <hr />
                                (Signature with Stamp)
                            </td>
                        </tr>
                    </table>
                    <br />
                    <table class="table table-striped table-bordered">
                        <tr style="color: white; height: 40px; text-align: center;">
                            <td>
                                <p style="background-color: #000;padding:10px">Thank you for your Business.</p>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>